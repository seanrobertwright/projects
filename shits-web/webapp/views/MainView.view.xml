<mvc:View 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="lril.app.controllers.MainView"
    displayBlock="true">
   <tnt:ToolPage
		id="app"
		class="sapUiDemoToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="sideNavigationToggleButton"
					icon="sap-icon://menu2"
					type="Transparent"
					press="onSideNavButtonPress"
					tooltip="{i18n>navigationToggleButtonTooltip}">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer/>
				<Title text="{i18n>appTitle}"/>
				<ToolbarSpacer/>
				<Button
					id="errorButton"
					icon="sap-icon://message-popup"
					visible="{= ${alerts>/alerts/errors}.length === 0 ? false : true }"
					type="Transparent"
					press="onMessagePopoverPress"
					tooltip="{i18n>errorButtonTooltip}">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
				<Button
					id="notificationButton"
					icon="sap-icon://ui-notifications"
					visible="{= ${alerts>/alerts/notifications}.length === 0 ? false : true }"
					type="Transparent"
					press="onNotificationPress"
					tooltip="{i18n>notificationButtonTooltip}">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
				<Button
					id="userButton"
					text="{i18n>userName}"
					type="Transparent"
					press="onUserNamePress">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation
				expanded="true"
				itemSelect="onItemSelect">
				<tnt:NavigationList
					items="{
						path: 'side>/navigation',
						templateShareable: false
					}">
					<tnt:NavigationListItem
						text="{side>title}"
						icon="{side>icon}"
						expanded="{side>expanded}"
						items="{
							path: 'side>items',
							templateShareable: false
						}"
						key="{side>key}">
						<tnt:NavigationListItem
							text="{side>title}"
							key="{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList
						items="{
							path: 'side>/fixedNavigation',
							templateShareable: false
						}">
						<tnt:NavigationListItem
							text="{side>title}"
							icon="{side>icon}"
							key="{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="mainContents"/>
		</tnt:mainContents>
	</tnt:ToolPage>
   
   
   
