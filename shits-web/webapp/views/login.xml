<mvc:View
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="lril.app.controllers.Login"
    displayBlock="true">

    <Page title="Login">
        <content>
            <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                <items>
                    <Label text="Please Enter Your Credentials"/>
                    <Input placeholder="username"/>
                    <Input placeholder="password" type="password"/>
                    <Button width="12rem" text="Login" type="Emphasized"/>
                </items>
            </VBox>
        </content>
    </Page>
</mvc:View>