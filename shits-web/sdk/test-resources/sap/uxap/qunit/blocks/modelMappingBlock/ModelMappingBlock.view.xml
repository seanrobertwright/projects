<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns="sap.m">

	<forms:SimpleForm
			maxContainerCols="2"
			editable="false"
			layout="ResponsiveGridLayout">
		<core:Title text="My name"></core:Title>
		<Text id="txtFirstName" text="{Contact>firstName}"/>
		<Text id="txtLastName" text="{Contact>lastName}"/>
	</forms:SimpleForm>
</mvc:View>
