<mvc:View
	controllerName="sap.m.sample.SelectDialog.controller.SelectDialog"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog"
				press="handleSelectDialogPress" />
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (Remember)"
				press="handleSelectDialogPress" >
				<customData>
					<core:CustomData
						key="remember"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (Multi)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (Remember)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
					<core:CustomData
						key="showClearButton"
						value="true" />
					<core:CustomData
						key="confirmButtonText"
						value="Remember Selection" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (growingThreshold=15)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
					<core:CustomData
						key="growing"
						value="true" />
					<core:CustomData
						key="threshold"
						value="15" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (growing=false)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
					<core:CustomData
						key="growing"
						value="false" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (draggable=true)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="draggable"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog (resizable=true)"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="resizable"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Select Dialog with Responsive Padding"
				press="handleSelectDialogPress">
				<customData>
					<core:CustomData
						key="responsivePadding"
						value="true" />
					<core:CustomData
						key="resizable"
						value="true" />
					<core:CustomData
						key="draggable"
						value="true" />
				</customData>
			</Button>
			<Input
				id="productInput"
				type="Text"
				value="Astro Phone 6"
				placeholder="Enter Product ..."
				showValueHelp="true"
				valueHelpOnly="true"
				valueHelpRequest="handleValueHelp"
				class="sapUiSmallMarginBottom"
				width="15rem"/>
		</l:content>
	</l:VerticalLayout>
</mvc:View>