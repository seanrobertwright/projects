<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:grid="sap.ui.layout.cssgrid"
    displayBlock="true"
	controllerName="sap.f.cardsdemo.controller.Dnd">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Using drag and drop with sap.ui.layout.cssgrid.CSSGrid"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<Panel>
				<VBox>
					<HBox alignItems="Center">
						<Label class="sapUiSmallMargin" text="Dense auto fill:"/>
						<Switch change="onDenseChange" state="false" />
					</HBox>
				</VBox>
			</Panel>

			<Panel headerText="Card Group 1">
				<f:GridContainer
					id="cssgrid"
					snapToRow="true"
					width="60%">

					<f:items>

						<w:Card class="green" manifest="{manifests>/zflow/card1}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="2"  columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card2}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="2"  columns="3" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card3}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="1" columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card4}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="1" columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card5}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="1" columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card6}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="1" columns="3" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card7}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="3"  columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="green" manifest="{manifests>/zflow/card8}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="3"  columns="2" />
							</w:layoutData>
						</w:Card>

					</f:items>
				</f:GridContainer>
			</Panel>

			<Panel headerText="Card Group 2">
				<f:GridContainer
					id="cssgrid2"
					snapToRow="true"
					width="60%">

					<f:items>

						<w:Card class="red" manifest="{manifests>/zflow/card1}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="2"  columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card2}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="2"  columns="3" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card3}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="1" columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card4}">
							<w:layoutData>
								<f:GridContainerItemLayoutData  columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card5}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="1" columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card6}">
							<w:layoutData>
								<f:GridContainerItemLayoutData  columns="3" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card7}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="3"  columns="2" />
							</w:layoutData>
						</w:Card>

						<w:Card class="red" manifest="{manifests>/zflow/card8}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="3"  columns="2" />
							</w:layoutData>
						</w:Card>

					</f:items>
				</f:GridContainer>
			</Panel>
		</content>
	</Page>
</mvc:View>