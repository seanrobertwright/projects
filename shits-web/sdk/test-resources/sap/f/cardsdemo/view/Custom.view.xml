<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:m="sap.m"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core"
	xmlns:w="sap.ui.integration.widgets"
    displayBlock="true"
    controllerName="sap.f.cardsdemo.controller.Custom">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Custom Card example"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<w:Card
				class="sapUiMediumMargin"
				width="300px"
				height="400px"
				manifest="./cardcontent/listcomponent/manifest.json">
			</w:Card>

			<f:Card
				class="sapUiMediumMargin"
				width="300px"
				height="400px">
				<f:header>
					<card:Header
						title="Some title"
						subtitle="Some long subtitle"
						iconSrc="sap-icon://accept"/>
				</f:header>
				<f:content>
					<m:Title class="sapUiMediumMargin" text="Some sap m Title"/>
				</f:content>
			</f:Card>

			<f:Card
				class="sapUiMediumMargin"
				width="300px"
				height="400px">
				<f:header>
					<card:NumericHeader
					 	title="Numeric"
						subtitle="Basic numeric subtitle"
						unitOfMeasurement="%"
						details="Some details also"/>
				</f:header>
				<f:content>
					<core:ComponentContainer manifest="./cardcontent/customcomponent/manifest.json"/>
				</f:content>
			</f:Card>

			<f:Card
				class="sapUiMediumMargin"
				width="300px"
				height="400px">
				<f:header>
					<card:Header
						title="Some title"
						subtitle="Some long subtitle"
						iconSrc="sap-icon://accept"/>
				</f:header>
				<f:content>
					<card:ListContent configuration="{list>/content}"/>
				</f:content>
			</f:Card>

			<w:Card
				class="sapUiMediumMargin"
				width="650px"
				height="600px"
				manifest="{manifests>/analyticalContent/donut}"/>

			<f:Card
				class="sapUiMediumMargin"
				width="650px"
				height="1600px">
				<f:header>
					<card:NumericHeader
					 	title="Numeric"
						subtitle="Basic Numeric subtitle"
						unitOfMeasurement="%"
						details="Some details also"/>
				</f:header>
				<f:content>
					<m:VBox>
						<m:Text class="sapUiMediumMargin" text="My Analytical Content"/>
						<card:AnalyticalContent configuration="{analytical>/content}"/>
						<m:Text class="sapUiMediumMargin" text="My List Content"/>
						<card:ListContent configuration="{list>/content}"/>
						<m:Text class="sapUiMediumMargin" text="My Table Content"/>
						<card:TableContent configuration="{table>/content}"/>
					</m:VBox>
				</f:content>
			</f:Card>

			<m:Panel>
				<m:Text class="sapUiMediumMargin" text="My Analytical Content"/>
				<card:AnalyticalContent configuration="{analytical>/content}"/>
				<m:Text class="sapUiMediumMargin" text="My List Content"/>
				<card:ListContent configuration="{list>/content}"/>
				<m:Text class="sapUiMediumMargin" text="My Table Content"/>
				<card:TableContent configuration="{table>/content}"/>
			</m:Panel>

            <w:Card class="sapUiMediumMargin" manifest="{manifests>/tableManifests/tablecard1}" width="400px" height="auto"/>

			<f:Card
				class="sapUiMediumMargin"
				width="300px"
				height="auto">
				<f:header>
					<card:Header
						title="Activity items"
						subtitle="Recent activities"
						iconSrc="sap-icon://activity-items"/>
				</f:header>
				<f:content>
					<card:TableContent configuration="{table>/content}"/>
				</f:content>
			</f:Card>

		</content>
	</Page>
</mvc:View>