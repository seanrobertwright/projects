<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:cards="sap.f.cards"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:grid="sap.ui.layout.cssgrid"
	displayBlock="true">

    <Page title="{i18n>appTitle}">

        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <Title text="Card with Numeric Header"/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>

        <content>
            <Panel>
                <grid:CSSGrid>
                    <grid:customLayout>
						<grid:GridBoxLayout boxMinWidth="400px"/>
					</grid:customLayout>
                    <grid:items>
                        <f:Card width="300px">
                            <f:header>
                                <cards:NumericHeader
                                    title="Project Cloud Transformation"
                                    subtitle="Revenue"
                                    unitOfMeasurement="Currency"
                                    details="Q1, 2018"

                                    number="65.3454"
                                    scale="K"
                                    trend="Down"
                                    state="Error"
                                    >
                                    <cards:sideIndicators>
                                        <cards:NumericSideIndicator title="Target" number="100" unit="K" />
                                        <cards:NumericSideIndicator title="Deviation" number="34.7" unit="%" />
                                    </cards:sideIndicators>
                                </cards:NumericHeader>
                            </f:header>
                        </f:Card>
                        <w:Card manifest="{manifests>/kpiManifests/kpicard1}"/>
                        <w:Card manifest="{manifests>/kpiManifests/kpicard2}"/>
                        <w:Card manifest="{manifests>/kpiManifests/kpicard3}"/>
                        <w:Card manifest="{manifests>/kpiManifests/kpicard4}"/>
                        <w:Card manifest="{manifests>/kpiManifests/tablecard1}"/>
                        <w:Card manifest="{manifests>/kpiManifests/tablecard123}"/>
                    </grid:items>
                </grid:CSSGrid>
            </Panel>
        </content>
    </Page>
</mvc:View>