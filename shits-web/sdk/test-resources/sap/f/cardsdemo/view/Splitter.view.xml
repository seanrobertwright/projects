<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:l="sap.ui.layout"
    displayBlock="true">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Using Z-flow configuration sap.ui.layout.cssgrid.CSSGrid"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<Panel expandable="true" headerText="Notes">
				<VBox>
					<Text text="The cards fit their container."/>
				</VBox>
			</Panel>

			<Panel>
				<l:Splitter height="600px">
					<l:Splitter orientation="Vertical">
						<w:Card id="default2x2"
								   manifest="{manifests>/splitter/card1}"
								   width="100%" height="100%"/>
						<w:Card id="default4x2withcomponent"
								   manifest="./cardcontent/listcomponent/manifest.json"
								   width="100%" height="100%"/>
					</l:Splitter>
					<l:Splitter orientation="Vertical">
						<w:Card id="default1x1"
								   manifest="{manifests>/splitter/card2}"
								   width="100%" height="100%"/>
						<w:Card id="default2x1"
								   manifest="{manifests>/splitter/card3}"
								   width="100%" height="100%"/>
					</l:Splitter>
				</l:Splitter>
			</Panel>
		</content>
	</Page>
</mvc:View>