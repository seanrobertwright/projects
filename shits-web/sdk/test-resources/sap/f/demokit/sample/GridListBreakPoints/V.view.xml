<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:grid="sap.ui.layout.cssgrid"
		xmlns:f="sap.f"
		controllerName="sap.f.sample.GridListBreakPoints.C">
	<MessageStrip
					class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop"
					type="Information"
					text="Note: This layout is not supported by Microsoft Internet Explorer and Microsoft Edge 15 and older versions."/>
	<Slider value="100" liveChange="onSliderMoved" />
	<Panel id="panelForGridList">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="GridList with break point S, M, L, XL"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<f:GridList
					id="gridList"
					headerText="GridList header"
					items="{ path: '/' }">

				<f:customLayout>
					<grid:GridResponsiveLayout layoutChange="onLayoutChange">
						<grid:layoutS>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 8rem)"
									gridGap="0.25rem 0.25rem">
							</grid:GridSettings>
						</grid:layoutS>
						<grid:layoutM>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 12rem)"
									gridGap="0.5rem 0.5rem">
							</grid:GridSettings>
						</grid:layoutM>
						<grid:layoutL>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 16rem)"
									gridGap="0.75rem 0.75rem">
							</grid:GridSettings>
						</grid:layoutL>
						<grid:layoutXL>
							<grid:GridSettings
									gridTemplateColumns="repeat(auto-fit, 20rem)"
									gridGap="1rem 1rem">
							</grid:GridSettings>
						</grid:layoutXL>
					</grid:GridResponsiveLayout>
				</f:customLayout>

				<f:GridListItem>
					<VBox height="100%">
						<VBox class="sapUiSmallMargin">
							<layoutData>
								<FlexItemData growFactor="1" shrinkFactor="0" />
							</layoutData>
							<Title text="{title}" wrapping="true" />
							<Label text="{subtitle}" wrapping="true" />
						</VBox>
					</VBox>
				</f:GridListItem>
			</f:GridList>
		</content>
	</Panel>
</mvc:View>