<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:grid="sap.ui.layout.cssgrid"
		xmlns:f="sap.f"
		controllerName="sap.f.sample.GridListBoxContainerGrouping.GridListBoxContainerGroupingHeadersGrowing">
	<Slider value="100" liveChange="onSliderMoved"/>
	<Panel id="panelForGridList">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="GridList with GridBoxLayout"/>
			</Toolbar>
		</headerToolbar>
		<content>
			<f:GridList
					id="gridList"
					items="{
						path: '/',
						sorter: {
							path: 'group',
							descending: false,
							group: true
						}
					}"
					growing="true"
					growingThreshold="9">

				<f:headerToolbar>
					<Toolbar>
						<content>
							<Title text="GridList, using custom header with SearchField" />
							<ToolbarSpacer/>
							<SearchField width="15rem"/>
						</content>
					</Toolbar>
				</f:headerToolbar>

				<f:customLayout>
					<grid:GridBoxLayout/>
				</f:customLayout>

				<f:GridListItem>
					<VBox >
						<VBox class="sapUiSmallMargin">
							<layoutData>
								<FlexItemData growFactor="1" shrinkFactor="0" />
							</layoutData>
							<Title text="{title}" wrapping="true" />
							<Label text="{subtitle}" wrapping="true" />
						</VBox>
					</VBox>
				</f:GridListItem>
			</f:GridList>
		</content>
	</Panel>
</mvc:View>